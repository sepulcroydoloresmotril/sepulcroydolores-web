---
const {img, name, title} = Astro.props
---
<article class='relative flex flex-col items-center justify-center w-full p-[1px] transition-all rounded-md bg-gradient-to-b from-white/20 via-transparent to-transparent hover:via-white/10 group'>
    <div class='bg-[#000214]/50 flex-1 group-hover:bg-[#cf1f21]/40 w-full px-6 py-10 rounded transition'>
        <figure class='flex items-center justify-center'>
            <picture>
                <source srcset={`/img/speakers/${img}.webp`} type='image/webp' />
                <img
                    class='object-cover object-top w-40 h-40 transition bg-white rounded-full group-hover:scale-110'
                    src={`/img/speakers/${img}.jpg`}
                    alt={`speaker: ${name}`}
                />
            </picture>
        </figure>
        <h3 class='mt-4 text-2xl font-bold text-center text-white'>
            {name}
        </h3>
        <p class='text-xl text-center text-slate-100'>{title}</p>
    </div>
</article>