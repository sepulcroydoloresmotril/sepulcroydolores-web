---
import Logo from "./Logo.astro";
---

<header id="header-nav" class="fixed top-0 w-full px-6 py-4 z-50 h-[100px]">
	<div class="max-w-7xl mx-auto flex items-center justify-start gap-3 sm:gap-5">
		<Logo class="w-10 h-10 sm:w-16 sm:h-auto "/>
		<span
			class="container w-[30ch] sm:text-3xl text-lg font-bold text-[var(--color-light)] leading-5"
			>Cofradía del Santo Sepulcro y Nuestra Señora de los Dolores</span
		>
	</div>
</header>

<style>
	#header-nav {
		animation: blur linear both;
		animation-timeline: scroll();
		animation-range: 0 300px;
	}

	@keyframes blur {
		to {
			box-shadow:
				0px 5px 50px -5px rgba(0, 0, 0, 0.1),
				0px 0px 0 1px rgba(0, 0, 0, 0.3);
			background: rgba(0, 0, 0, 0.3);
			backdrop-filter: blur(10px);
		}
	}
</style>
