---
import Logo from "../Logo.astro";
import Slider from "../Slider.astro";
---

<section
	id="hero"
	class="relative z-10 h-screen flex flex-col justify-center items-center gap-10 lg:gap-5"
>

	<!-- <Slider /> -->
	<picture>
		<source srcset="/img/slider/slider1.webp" type="image/webp" />
		<img
			src="/img/slider/slider1.webp"
			alt="Fotografía antigua de Nuestro Padre Jesús en su Santo Sepulcro"
			class="absolute inset-0 w-full h-full object-cover object-left-top opacity-35 -z-10"
		/>
	</picture>
	<Logo class="w-36 md:w-40 lg:w-48 lg:mt-12" />
	<div class="max-w-7xl mx-auto">
		<h1
			class="mx-auto my-0 px-6 sm:px-20  text-3xl sm:text-4xl lg:text-5xl font-bold text-[var(--color-red)] text-center font-roman"
		>
			Ciclo de Conferencias
		</h1>
		<span
			class="px-2 text-md sm:text-xl md-text-2xl mx-w-[30] lg:max-w-[60ch] text-pretty mx-auto text-center text-[var(--color-light)] font-roman block"
		>
			LXXV Aniversario de la hechura de Nuestro Padre Jesús en su Santo
			Sepulcro
		</span>
	</div>
</section>
